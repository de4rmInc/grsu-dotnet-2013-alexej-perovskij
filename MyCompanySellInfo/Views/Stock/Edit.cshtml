@model MyCompanySellInfo.Models.Stock

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Stock</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.GoodsID, Html.DisplayNameFor(model => model.GoodsID).ToString(), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("GoodsID", String.Empty)
                @Html.ValidationMessageFor(model => model.GoodsID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Client, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Client)
                @Html.ValidationMessageFor(model => model.Client)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ManagerID, Html.DisplayNameFor(model => model.ManagerID).ToString(), new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ManagerID", String.Empty)
                @Html.ValidationMessageFor(model => model.ManagerID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date)
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cost, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cost)
                @Html.ValidationMessageFor(model => model.Cost)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
