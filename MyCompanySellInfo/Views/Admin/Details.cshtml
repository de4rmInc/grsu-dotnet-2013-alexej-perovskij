@model MyCompanySellInfo.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PasswordHash)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PasswordHash)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

    </dl>
</div>
<h4>User Roles</h4>
<div>
    <div class="row">
        <div class="col-md-5">
            <table class="table-bordered">
                <thead>
                    <tr>
                        @{var role = Model.Roles.FirstOrDefault();}
                        <th>@Html.DisplayNameFor(itemRole => role.Role.Id)</th>
                        <th>@Html.DisplayNameFor(itemStock => role.Role.Name)</th>
                        <th>@Html.DisplayNameFor(itemStock => role.UserId)</th>
                        <th>@Html.DisplayNameFor(itemStock => role.User.UserName)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Roles)
                    {
                        <tr>
                            <td>@Html.DisplayFor(itemStock => item.Role.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Role.Name)</td>
                            <td>@Html.DisplayFor(itemStock => item.UserId)</td>
                            <td>@Html.DisplayFor(itemStock => item.User.UserName)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div id="piechart0" style="width: 600px; height: 300px;"></div>
        </div>
    </div>

</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
