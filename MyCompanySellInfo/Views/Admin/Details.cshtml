<h4>User Roles</h4>
<div>
    <div class="row">
        <div class="col-md-5">
            <table class="table-bordered">
                <thead>
                    <tr>
                        @{var role = Model.Roles.FirstOrDefault();}
                        <th>@Html.DisplayNameFor(itemRole => role.Role.Id)</th>
                        <th>@Html.DisplayNameFor(itemStock => role.Role.Name)</th>
                        <th>@Html.DisplayNameFor(itemStock => role.UserId)</th>
                        <th>@Html.DisplayNameFor(itemStock => role.User.UserName)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Roles)
                    {
                        <tr>
                            <td>@Html.DisplayFor(itemStock => item.Role.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Role.Name)        
                            </td>
                            <td>@Html.DisplayFor(itemStock => item.UserId)</td>
                            <td>@Html.DisplayFor(itemStock => item.User.UserName)</td>
                            <td>
                                <p>
                                    <div class="dropdown">
                                        <button class="dropdown-toggle btn-primary" data-toggle="dropdown">Action</button>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Edit", "Edit", "Stock", new { id = item.RoleId }, null)</li>
                                            <li>@Html.ActionLink("Details", "Details", "Stock", new { id = item.RoleId }, null)</li>
                                            <li class="divider"></li>
                                            <li>@Html.ActionLink("Delete", "Delete", "Stock", new { id = item.RoleId }, null)</li>
                                        </ul>
                                    </div>
                                </p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div id="piechart0" style="width: 600px; height: 300px;"></div>
